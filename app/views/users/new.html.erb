<h3>Create an account</h3><br>

<%= form_for :user, url: '/users' do |f|%>

  <div class="form-group">
  <label for="firstname">Firstname:</label>
  <%= f.text_field :firstname, class:"form-control",style:"width: 200px;" %>
  </div>
  <div class="form-group">
  <label for="lastname">Lastname:</label>
    <%= f.text_field :lastname, class:"form-control",style:"width: 200px;" %>
  </div>
  <div class="form-group">
  <label for="email">Email address:</label>
  <%= f.text_field :email, class:"form-control",style:"width: 400px;" %>
  </div>
  <div class="form-group">
  <label for="password">Password:</label>
    <%= f.password_field :password, class:"form-control",style:"width: 200px;"%>
  </div>
  <div class="form-group">
  <label for="password">Password confirmation:</label>
    <%= f.password_field :password_confirmation, class:"form-control",style:"width: 200px;" %>
  </div>

  <%= f.submit "Submit", class:"btn btn-info" %>

<% end %>